<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <!-- Cor primária da ActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Cor primária escura da barra do sistema -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Cor de destaque -->
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema com Toolbar. -->
    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#9C2780</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="titleTextAppearance">@android:style/TextAppearance.Material.Widget.Toolbar.Title</item>
    </style>

</resources>