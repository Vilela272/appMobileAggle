<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="Nome" />

    <EditText
        android:id="@+id/nomeDoProduto"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Digite o nome do produto"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="Proprietário" />

    <EditText
        android:id="@+id/proprietario"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Digite o nome do proprietário"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="Foto" />

    <EditText
        android:id="@+id/foto"
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insira a url da foto"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="Descrição" />

    <EditText
        android:id="@+id/descricao"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        android:ems="10"
        android:gravity="center"
        android:layout_gravity="center"
        android:hint="Digite a descrição do produto"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/botaoSalvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:drawableBottom="@color/colorPrimaryDark"
        android:paddingBottom="@dimen/cardview_compat_inset_shadow"
        android:layout_marginTop="2dp"
        android:textSize="20dp"
        android:text="Cadastrar" />
</LinearLayout>